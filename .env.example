# ===============================
# Neon Postgres (TimescaleDB)
# ===============================
DATABASE_URL=postgresql://USER:PASSWORD@HOST/DB?sslmode=require

# ===============================
# MQTT (HiveMQ Cloud)
# ===============================
MQTT_ENABLED=true
MQTT_HOST=xxxx.s1.eu.hivemq.cloud
MQTT_PORT=8883
MQTT_USERNAME=your_user
MQTT_PASSWORD=your_pass

# Topics (รองรับ wildcard เช่น cp/test/+/telemetry)
MQTT_TELE_TOPIC=cp/test/dht22/telemetry
MQTT_STAT_TOPIC=cp/test/dht22/status

DEVICE_ID_DEFAULT=dht22-01

# ===============================
# Retention / Cleanup
# ===============================
RETENTION_DAYS=30
CLEANUP_EVERY_MINUTES=360

TZ=Asia/Bangkok
